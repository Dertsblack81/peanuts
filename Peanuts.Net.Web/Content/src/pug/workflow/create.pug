extends ../app/atomic/template/default

block content-toolbar
    +content-toolbar
        +button('primary', 'angle-right')(type="submit" form="create-workflow") Speichern & zur√ºck
        +button('info', 'angle-right') Abbrechen

block content
    .container-content
        .container-content__header
            +headline(1) Workflow erstellen

        +form('horizontal')(id="create-workflow")
            fieldset
                legend.form__legend Reservierung
                +form-group('Reservierungspreis', 'price')
                    +input-number('price', null, '&euro;', 0.01)
                +form-group('Bemerkung', 'textarea1')
                    +textarea('textarea1')(rows=15 data-val-length=errormsg.length data-val-length-max="5" data-val="true")
