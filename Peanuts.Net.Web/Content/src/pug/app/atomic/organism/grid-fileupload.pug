include ../molecule/file-upload-container

mixin grid-fileupload(title, name)
    .grid-fileupload
        +headline(2)= title
        +form-group('',name)(data-required-field='False')
            .js-fileuploader(data-is-multiple-upload='False', data-url-upload='#')
                template.new-file-template
                    +file-uploaded('/images/img_1.png','#edit','#delete')
                input.grid-fileupload__input.js-fileuploader-input(type='file', placeholder='' id=name)
                .grid-fileupload__container.js-fileuploader-uploaded-files-container
                    +file-upload-container()
                    block
        .control-validation
            span.field-validation-valid(data-valmsg-for=name, data-valmsg-replace='true')
