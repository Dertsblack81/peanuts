@model Com.QueoFlow.Peanuts.Net.Web.Models.Shared.Forms.DateTimeInputModelBase

@{
    string datePickerId = Model.Id + "_container";
}

<div class="form-group entity-property" data-required-field="@(Model.IsRequired)" data-valmsg-for="@Model.Id"  data-valmsg-replace="false">
    <label for="@Model.Id" class="control-label">@Model.Label</label>
    <div class="control-value">
        <div class="input-group date js-date-picker" id="@datePickerId">
            <input type="@Model.InputType" id="@Model.Id" class="form-control" name="@Model.Name" placeholder="@Model.Placeholder" value="@Model.Value" @Model.GetValidationAttributes() />
            <span class="input-group-addon">
                <span class="icon-calendar"></span>
            </span>
        </div>
    </div>   
</div>