@using System.Globalization
@model Com.QueoFlow.Peanuts.Net.Web.Models.Shared.Forms.NumberInputModel


@{
    IFormattable formattable = Model.Value as IFormattable;
    string value = "";
    if (formattable != null) {
        /*Damit die Browser klarkommen, muss der Wert auf jeden Fall invariant (z.B. 5.5) als value gesetzt werden.*/
        value = formattable.ToString(null, CultureInfo.InvariantCulture);
    }

}


<div class="form-group entity-property" data-required-field="@(Model.IsRequired)" data-valmsg-for="@Model.Id"  data-valmsg-replace="false">
    <label for="@Model.Id" class="control-label">@Model.Label</label>
    <div class="control-value">
        <input type="text" id="@Model.Id" name="@Model.Name" value="@value" placeholder="@Model.Placeholder" step="@Model.Step" class="form-control" @Model.GetValidationAttributes() />
    </div>
</div>